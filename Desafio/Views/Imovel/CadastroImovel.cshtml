@{
    ViewData["Title"] = "Cadastro de Imoveis";
}
<h1>@ViewData["Title"]</h1>

@model Imovel
<hr />
<h4>Informações do Imovel</h4>
<form action="~/Imovel/CadastrarImovel" id="dropzoneJsForm">
    <h3>Endereço</h3>
    <div class="form-group">
        <div>
            @Html.LabelFor(x => x.Cep, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Cep, new { @class = "control-label" })
        </div>
        <div>
            @Html.LabelFor(x => x.Estado, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Estado, new { @class = "control-label" })
        </div>
        <div>
            @Html.LabelFor(x => x.Cidade, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Cidade, new { @class = "control-label" })
        </div>
        <div>
            @Html.LabelFor(x => x.Bairro, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Bairro, new { @class = "control-label" })
        </div>
        <div>
            @Html.LabelFor(x => x.Complemento, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Complemento, new { @class = "control-label" })
        </div>
        <div>
            @Html.LabelFor(x => x.Numero, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Numero, new { @class = "control-label" })
        </div>
    </div>
    <div class="form-group">
        <h3>Informações do Imovel</h3>
        <div>
            @Html.LabelFor(x => x.AreaConstruida, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.AreaConstruida, new { @class = "control-label" })
        </div>
        <div>
            @Html.LabelFor(x => x.TipoImovel, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.TipoImovel, new { @class = "control-label" })
        </div>
        <div>
            @Html.LabelFor(x => x.ValorLocacao, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.ValorLocacao, new { @class = "control-label" })
        </div>
        <div>
            @Html.LabelFor(x => x.ValorVenda, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.ValorVenda, new { @class = "control-label" })
        </div>
    </div>
    <div>
        <button class="btn btn-primary btn-group" id="CadastrarImovel" type="submit" asp-area="" asp-action="CadastrarImovel" asp-controller="Imovel" method="post">Cadastrar</button>
        <a class="btn btn-group" asp-controller="Home" asp-action="Index">Voltar</a>
    </div>
</form>


